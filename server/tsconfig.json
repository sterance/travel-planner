{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["*.ts", "db/**/*.ts", "routes/**/*.ts", "middleware/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
